# BBH HMS – Environment Configuration
# Copy to .env and fill in all values before deploying.
# NEVER commit .env to version control.

# ── Domain ─────────────────────────────────────────────────────────────────────
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ── Traefik Basic Auth (generate with: htpasswd -nb admin yourpassword) ────────
TRAEFIK_BASIC_AUTH=admin:$$2y$$10$$exampleHashHere

# ── PostgreSQL ─────────────────────────────────────────────────────────────────
POSTGRES_USER=bbh_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=bbh_hms

# ── Redis ──────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# ── MinIO ──────────────────────────────────────────────────────────────────────
MINIO_ROOT_USER=bbh_minio_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD_HERE
MINIO_PUBLIC_ENDPOINT=https://storage.yourdomain.com

# ── Session ────────────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 64
SESSION_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_64

# ── Grafana ────────────────────────────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE
